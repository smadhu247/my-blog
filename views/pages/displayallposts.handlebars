{{#if isPost}}  
{{#each post}} 
<div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-50 col-xl-100 row-md-10 row-lg-50 row-xl-100">
                    <!-- Post preview-->
                    <div class="post-preview">
                        <div id="title"> 
                            <a href="/blogpost/{{this._id}}">
                                <h2 class="post-title">{{this.title}}</h2>
                            </a>
                        </div>
                        <div> 
                            <p class="post-meta" id="date">
                                Posted on {{this.date}}
                            </p>
                        </div>
                        <p class="post-meta text-truncate" id="content-bit" >
                            {{this.content}}
                        </p>
                    </div>
                    <!-- Divider-->
                    <hr class="my-4" />
                    <br>
                    <!-- Pager-->
                    {{!-- <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a></div> --}}
                </div>
            </div>
        </div>
        {{/each}}
{{else}}
    <p> Nothing to see here (yet!) </p>
{{/if}} 
